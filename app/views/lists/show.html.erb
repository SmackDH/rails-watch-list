<h1><%= @list.name %></h1>
<%= link_to 'Back', lists_path %>
<%= link_to 'Add Bookmark', new_list_bookmark_path(@list) %>
<div>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li><%= bookmark.comment %> | <%= link_to "X", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
      <small class="text-right flex-shrink-0"><%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove the movie from your #{@list.name} list"}, class: 'text-danger' %></small>
    <% end %>
  </ul>
</div>
