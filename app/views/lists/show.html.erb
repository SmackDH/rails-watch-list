<div id="grid" class="container">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-sm-4 profile">
        <div class="card show">
          <div class="card__top" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">>
            This should be an image.
          </div>
          <div class="card__bottom">
            <h5><%= bookmark.comment %> | <%= link_to "X", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></h5>
            <p><%= bookmark.movie.overview %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to 'Back', lists_path %>
<%= link_to 'Add Bookmark', new_list_bookmark_path(@list) %>
