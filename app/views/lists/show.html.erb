<div id="grid" class="container">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-sm-4 profile">
        <div class="card">
          <div class="card__top">
            This should be an image.
          </div>
          <div class="card__bottom">
            <li><%= bookmark.comment %> | <%= link_to "X", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to 'Back', lists_path %>
<%= link_to 'Add Bookmark', new_list_bookmark_path(@list) %>
